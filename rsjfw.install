post_install() {
    update-desktop-database -q
    xdg-mime default rsjfw.desktop x-scheme-handler/roblox-studio
    xdg-mime default rsjfw.desktop x-scheme-handler/roblox-studio-auth
    echo "RSJFW installed. Run 'rsjfw' to start."
}

post_upgrade() {
    post_install
}

post_remove() {
    update-desktop-database -q
}
